%table(class="table table-hover text-center" )
  %tr
    %td
      编号
    %td
      活动名称
    %td
      报名列表
    %td
      竞价列表
  -@activities.each do |activity|
    %tr
      %td
        =@count+=1
      %td
        =activity.name
      %td
        =link_to "报名列表",sign_up_list_path(:name=>activity.name)
      %td
        =link_to "竞价列表",bids_list_path(:name=>activity.name)