%table(class="table table-hover text-center" )
  %tr
    %td
      编号
    %td
      名称
    %td
      参与人数

  -@bids.each do |bid|
    %tr
      %td
        =@count+=1
      %td
        =link_to bid.name,bidding_list_path(:bid_name=>bid.name,:activity_name=>params[:name])
      %td
        =Biddings.where(:user_name=>current_user.name,:activity_name=>params[:name],:bid_name=>bid.name).length
        ='/'
        =SignUps.where(:user_name=>current_user.name,:activity_name=>params[:name]).length